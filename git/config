[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[pull]
	rebase = true
[init]
	defaultBranch = main
[core]
	quotepath = false # Show unusual characters in file path
	autocrlf = input
[commit]
	verbose = true
